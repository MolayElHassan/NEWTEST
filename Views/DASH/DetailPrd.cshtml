        </dt>

        <dd>
            @Html.DisplayFor(model => model.P_PRICE)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.P_STATUT)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.P_STATUT)
        </dd>

    </dl>
</div>
