@model NEWTEST.TBL_USERS

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@using (Html.BeginForm())
{
<fieldset>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @if (@ViewBag.Message != null)
    {
        <div style="border: 1px solid red">
            @ViewBag.Message
        </div>
    }

<form action="#" class="login-form">
    <div class="form-group">
        @Html.TextBoxFor(m => m.U_EMAIL, new { @type = "email", @class = "form-control rounded-left", placeholder="Ex : admin@email.com" })
    </div>
    <div class="form-group d-flex">
        @Html.PasswordFor(m => m.U_PASSWORD, new { @type = "password", @class = "form-control rounded-left", placeholder="Ex : Password" })
    </div>
    <div class="form-group d-flex">
        @Html.PasswordFor(m => m.U_PHONE, new { @type = "text", @class = "form-control rounded-left", placeholder="Ex : +1 631-653-2202" })
    </div>
    <div class="form-group d-flex">
        @Html.PasswordFor(m => m.U_ADRESS, new { @type = "text", @class = "form-control rounded-left", placeholder= "Ex : 1286 Bruce Street, New York" })
    </div>
    <div class="form-group d-flex" style="display:none">
        @Html.PasswordFor(m => m.U_TYPE, new { @type = "text", @value="1", @style = "display:none" })
    </div>
    <div class="form-group d-md-flex">
        <div class="w-50">
        </div>
        <div class="w-50 text-md-right">
            <a href="@Url.Action("Login")">Have an account?</a>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Register</button>
    </div>
</form>

</fieldset>
}