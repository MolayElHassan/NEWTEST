<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>

    @Styles.Render("https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap")
    @Styles.Render("https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    @Styles.Render("~/Content/Auth/css/style.css")
</head>
<body>

    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <br />
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </section>


    @Scripts.Render("~/Content/Auth/js/jquery.min.js")
    @Scripts.Render("~/Content/Auth/js/popper.js")
    @Scripts.Render("~/Content/Auth/js/bootstrap.min.js")
    @Scripts.Render("~/Content/js/main.js")
</body>
</html>
